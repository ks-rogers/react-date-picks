{
   "compilerOptions":{
      "target":"es6",
      "moduleResolution":"node",
      "module":"esnext",
      "declaration":true,
      "noLib":false,
      "emitDecoratorMetadata":true,
      "experimentalDecorators":true,
      "sourceMap":true,
      "pretty":true,
      "jsx": "preserve",
      "allowUnreachableCode":true,
      "allowUnusedLabels":true,
      "noImplicitAny":true,
      "noImplicitReturns":false,
      "noImplicitUseStrict":false,
      "baseUrl":"src/",
      "listFiles":false,
      "noEmitHelpers":true,
      "esModuleInterop": true
   },
   "include":[
      "src/**/*"
   ],
   "exclude":[
      "node_modules"
   ],
   "compileOnSave":false
}
